@{
    ViewData["Title"] = "List One";
}
@model Person;
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="text-center">
    <h1 class="display-4">Listing a person in the database</h1>
    <div>
        @{
            var person = Model;
            if(person !=null)
            {
                <p>Name: @person.firstname @person.lastname <br /> Country: @person.country <br /> Image:@person.image<br/>Email:@person.email</p>
            }
            else
            {
                <b>
                    Cet ID est invalide
                </b>
            }
        }
    </div>
</div>
